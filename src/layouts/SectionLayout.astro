---
export interface Props {
  title: string;
  sectionId: string;
  background?: string;
}

const { title, sectionId, background } = Astro.props
---

<section id={sectionId}>
  <h1>{title}</h1>
  <slot/>
</section>

<style lang="scss" define:vars={{background}}>
  section {
    background: var(--background);
    width: 100%;
    padding: 30px 5vw 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }
  h1 {
    color: var(--black);
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 50px;
    padding-bottom: 1rem;
    position: relative;
    z-index: 1;
    &::after {
      content: '';
      position: absolute;
      height: 2px;
      width: calc(100% - 40px);
      background: var(--accent);
      left: 20px;
      bottom: 0;
    }
  }
</style>