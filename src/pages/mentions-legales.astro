---
import Layout from "../layouts/Layout.astro";
import PaperBackground from '../components/shared/PaperBackground.astro';

import { Content as WebsiteInfos } from "../content/mentions-legales/site-web.md";
import { Content as CGVContent } from "../content/mentions-legales/CGV.md";
import MainLogo from '../components/shared/MainLogo.astro';
---

<Layout title="Hestia généalogie et Patrimoine - mentions légales">
	<div class="wrapper">
		<PaperBackground />
		<MainLogo />
		<main class="main-content">
			<h1>Mentions légales</h1>
			<div class="website-infos">
				<WebsiteInfos />
			</div>
			<CGVContent />
		</main>
	</div>
</Layout>

<style lang="scss">
	.wrapper {
		position: relative;
	}
	.main-content {
		min-height: 100vh;
		max-width: 1000px;
		margin: auto;
		padding: 3rem;
		position: relative;
		z-index: 1;
		h1 {
			font-size: 2rem;
			font-weight: 800;
			text-align: center;
			margin: 0;
			margin-bottom: 3rem;
  	}
		.website-infos {
			margin-bottom: 3rem;
		}
	}
</style>
