---
import SectionLayout from '../../layouts/SectionLayout.astro'
import PaperBackground from '../shared/PaperBackground.astro'
import StrokeMapBackground from '../StrokeMapBackground.astro'
import Button from '../shared/Button.astro'
import { Content as ExplanationContent } from '../../content/genealogie/explanation.md'
---

<SectionLayout
  title="Généalogiste Familiale & Historienne du patrimoine bâti"
  sectionId="explanations"
>
  <PaperBackground />
  <StrokeMapBackground />
  <div class="explanation-text">
    <ExplanationContent />
  </div>
  <Button
    title="Voir les tarifs"
    ariaLabel="Voir les tarifs"
    fontSize="1.2rem"
    buttonColor="#DEB057"
    href="#informations"
  />
</SectionLayout>

<style lang="scss">
  .explanation-text {
    width: 80%;
    margin-left: 60px;
    max-width: 840px;
    font-size: 1.1rem;
    line-height: 1.5;
    font-family: 'Crimson Text', serif;
    position: relative;
    z-index: 2;
    :global(p) {
      margin-bottom: 1rem;
      &:last-child {
        margin-bottom: 3rem;
      }
    }
    :global(ul) {
      margin: 14px 0;
      list-style: none;
    }
    :global(ul li) {
      margin-bottom: 30px;
      line-height: 1.8;
      position: relative;
    }
    :global(ul li:nth-child(1)::before) {
      position: absolute;
      top: -25px;
      transform: translateX(-100%);
      content: url('../assets/gene_tree.svg');
    }
    :global(ul li:nth-child(2)::before) {
      position: absolute;
      top: -10px;
      transform: translateX(-140%);
      content: url('../assets/chess_tower.svg');
    }
    :global(ul li:nth-child(3)::before) {
      position: absolute;
      top: -10px;
      transform: translateX(-120%);
      content: url('../assets/gift.svg');
    }
    :global(.plus) {
      font-size: 1.75rem;
    }
  }

  @media screen and (max-width: 500px) {
    .explanation-text {
      width: 90%;
      margin-left: 0;
    }
    .explanation-text :global(ul li) {
      margin-bottom: 60px;
    }
    .explanation-text :global(ul li:nth-child(1)::before) {
      top: -60px;
      left: 50%;
      transform: translateX(-50%);
    }
    .explanation-text :global(ul li:nth-child(2)::before) {
      top: -50px;
      left: 50%;
      transform: translateX(-50%);
    }
    .explanation-text :global(ul li:nth-child(3)::before) {
      top: -60px;
      left: 50%;
      transform: translateX(-50%);
    }
  }
</style>
