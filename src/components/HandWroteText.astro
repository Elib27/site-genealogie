<style lang="scss">
  svg {
    path {
      stroke: var(--black);
      stroke-width: 6px;
      stroke-linecap: round;
      stroke-dasharray: 400;
      stroke-dashoffset: 400;
      animation: 1s fillSvg linear forwards;
      animation-play-state: paused;
      @for $i from 1 through 9 {
        &:nth-of-type(#{$i}) {
          animation-delay: $i * 0.5s;
        }
      }
    }
    &.active path{
      animation-play-state: running;
    }
    ellipse {
      fill: var(--black);
      opacity: 0;
      animation: 0.3s writing-point linear forwards;
      animation-delay: 2.5s;
    }
  }

  @keyframes fillSvg {
    0% {
      stroke-dashoffset: 400;
    }
    100% {
      stroke-dashoffset: 0;
    }
  }

  @keyframes writing-point {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

</style>

<script defer>
  const text = document.querySelector('.drawing-text');

  const options = {
    rootMargin: '0px',
    threshold: 0.5,
  }

  function animateText(entries, observer) {
    if (entries[0].isIntersecting > 0) {
      text.classList.add('active');
      observer.unobserve(text);
    }
  }

  const observer = new IntersectionObserver(animateText, options);
  observer.observe(text);

</script>