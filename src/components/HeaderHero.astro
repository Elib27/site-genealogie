---
import { Image } from '@astrojs/image/components'

import Navbar from "./Navbar.astro";
import Button from "./shared/Button.astro";
import Clock from "./Clock.astro";

import oldPeopleImage from "../assets/old_people_photo.png";
import postCard from "../assets/postcard.png";
import handTree from "../assets/hand_tree.svg";

import '@fontsource/playfair-display/700.css'

const links = [
  {name: "Préstations", url: "#prestations"},
  {name: "Comment ça marche ?", url: "#comment-ca-marche"},
  {name: "A propos de moi", url: "#a-propos"},
  {name: "Contact", url: "#contact"},
]
---

<header id="home">
  <Image
    class="main-logo"
    height={50}
    width={50}
    src={handTree}
    alt="logo arbre fait de mains"
  />
  <Navbar links={links}/>
  <div class="hero-container">
    <div class="name-wrapper">
      <div class="name animated">
        ESTIENNE Marie-Pierre<br>
        Généalogiste Familiale
      </div>
    </div>
    <div class="main-wrapper">
      <Image
        src={oldPeopleImage}
        width="400"
        alt="personnes agées photographiées en noir et blanc"
        class="old-people-image animated"
      />
      <Image
        src={postCard}
        width="400"
        alt="ancienne carte postale"
        class="postcard animated"
      />
      <div class="left-container">
        <div class="title animated">Remontez le temps...</div>
        <div class="title animated">Retrouvez vos ancêtres...</div>
        <div class="title animated">Découvrez votre histoire...</div>
        <div class="button-container animated">
          <Button
            title="Commencer le voyage"
            buttonColor="#F8F8F8"
            fontSize="1.2rem"
            href="#explanations"
          />
        </div>
      </div>
      <div class="right-container">
        <div class="clock-container animated">
          <Clock />
        </div>
      </div>
    </div>
  </div>
</header>

<style lang="scss">
  header {
    height: 100vh;
    background: var(--primary);
    overflow: hidden;
  }
  .hero-container {
    width: 100%;
    padding: 0 5vw;
  }
  .name-wrapper {
    display: flex;
    justify-content: center; 
    widows: 100%;
    margin-top: 3rem;
  }
  .main-logo {
    position: absolute;
    top: 20px;
    left: 40px;
    pointer-events: none;
    z-index: 1;
  }
  .name {
    font-size: 1rem;
    font-style: italic;
    text-align: center;
    line-height: 1.6;
    opacity: 0;
    animation: apparition 1s ease-out forwards;
  }
  .main-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 15vh;
  }
  .left-container {
    display: flex;
    flex-direction: column;
    z-index: 1;
  }
  .title {
    font-size: min(3vw, 2.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 2.2rem;
    opacity: 0;
    transform: translateY(-40px);
    animation: apparition 1s ease-out forwards;
    &:nth-child(1) {
      animation-delay: 0.6s;
    }
    &:nth-child(2) {
      animation-delay: 1.2s;
    }
    &:nth-child(3) {
      animation-delay: 2s;
      font-size: min(4vw, 3.5rem);
      margin-bottom: 3.5rem;
    }
  }
  .button-container {
    align-self: center;
    opacity: 0;
    animation: apparition 1.2s 3s ease-out forwards;
  }
  .old-people-image {
    position: absolute;
    top: 20%;
    left: 5%;
    pointer-events: none;
    user-select: none;
    opacity: 0;
    animation: apparition 2.5s 3s ease-out forwards;
  }
  .postcard {
    position: absolute;
    bottom: 10%;
    right: 5%;
    pointer-events: none;
    user-select: none;
    opacity: 0;
    animation: apparition 2.5s 5s ease-out forwards;
  }
  .clock-container {
    position: relative;
    top: -10vh;
    opacity: 0;
    animation: apparition 1s ease-out forwards;
  }
  
  @keyframes apparition {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 600px) {
    .name-wrapper {
      margin-top: 4.5rem;
    }
  }
</style>