  title="Préstations"
  sectionId="prestations"
  background="#DEB057"
>
  <div class="cards-container">
    <ServiceCard
      cardTitle={card1.title}
      cardContent={card1.cardContent}
      buttonContent={card1.buttonContent}
    />
