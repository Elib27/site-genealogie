---
import PaperBackground from "./shared/PaperBackground.astro";

import cross from "../assets/cross.svg";

const { id, cardTitle } = Astro.props;
---
<div class="card-wrapper no-display" id={id}>
  <div class="card-container">
    <div class="background">
      <PaperBackground />
    </div>
    <h2>{cardTitle}</h2>
    <button class="close-btn">
      <img src={cross} alt="close" draggable="false"/>
    </button>
    <div class="scrollable-content">
      <div class="scrollable-wrapper">
        <slot />
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  .card-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.4);
    opacity: 0;
    transition: opacity 0.2s ease-out;
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
    &.visible {
      opacity: 1;
    }
    &.no-display {
      display: none;
    }
  }
  .card-container {
    max-height: 80vh;
    width: 80vw;
    max-width: 1000px;
    background-color: var(--white);
    border-radius: 20px;
    border: 4px solid #897347;
    padding: 1.5rem 1rem 2rem 3rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    pointer-events: all;
    z-index: 11;
    h2 {
      margin-bottom: 20px;
      text-align: center;
      z-index: 12;
    }
    .scrollable-content {
      height: 100%;
      width: 100%;
      overflow-y: auto;
      z-index: 12;
      .scrollable-wrapper {
        padding-right: 1rem;
      }
    }
    .scrollable-content :global(h3) {
      font-size: 1.2rem;
      margin: 1rem 0 0.25rem 0;
    }
    .scrollable-content :global(p), .scrollable-content :global(ul){
      font-size: 0.875rem;
      margin-bottom: 0.6rem;
    }
    .scrollable-content :global(li) {
      margin-left: 2rem;
    }
    .background {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      border-radius: 16px;
      overflow: hidden;
    }
    .close-btn {
      height: 30px;
      width: 30px;
      position: absolute;
      right: 16px;
      top: 16px;
      background-color: transparent;
      border: none;
      cursor: pointer;
      user-select: none;
      opacity: 0.8;
      &:hover {
        opacity: 1;
      }
    }
    .scrollable-content {
      &::-webkit-scrollbar {
        width: 0.8rem;
      }
      
      &::-webkit-scrollbar-track {
        box-shadow: none;
      }
      
      &::-webkit-scrollbar-thumb {
        border-radius: 10px;
        background-color: var(--light-grey);
        &:hover {
          background-color: var(--grey);
        }
      }
    }
  }
  @media screen and (max-width: 800px) {
    .card-container {
      width: 80vw;
      padding: 2rem;
    }
  }
  @media screen and (max-width: 600px) {
    .card-container {
      width: 90vw;
      padding: 1.5rem;
    }
  }
</style>