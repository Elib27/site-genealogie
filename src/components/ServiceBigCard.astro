---
import PaperBackground from "./shared/PaperBackground.astro";

import cross from "../assets/cross.svg";

const { id, cardTitle, cardContent } = Astro.props;
---

<div class="card-container visible" id={id}>
  <PaperBackground />
  <h2>{cardTitle}</h2>
  <p>{cardContent}</p>
  <div class="close-btn">
    <img src={cross} alt="close" />
  </div>
  <slot/> 
</div>

<style lang="scss">
  .card-container {
    width: 70%;
    max-width: 1000px;
    background-color: var(--white);
    border-radius: 20px;
    overflow: hidden;
    border: 4px solid #897347;
    align-items: center;
    padding: 2rem 3rem;
    display: none;
    flex-direction: column;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    h2 {
      margin-bottom: 20px;
    }
    & > * {
      z-index: 11;
    }
    &.visible {
      opacity: 1;
      display: flex;
    }
  }
</style>